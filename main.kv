<MainScreen>
    size_hint: 0.9,0.85
    pos_hint: {'center_x':0.5, 'center_y':0.5}
    MDFloatLayout:
        size_hint: 1,0.23
        pos_hint: {"center_x": 0.5, "center_y": 0.73}
        MDCard:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            radius: [10]
            elevation: 10
            orientation: "vertical"
            padding: [15,8,15,8]

            MDLabel:
                text: "Pronunciation"
                font_size: '13sp'
                bold: True
                theme_text_color: "Custom"
                text_color: [75/255, 75/255, 75/255, 1]
            
            MDLabel:
                id: lbl_pron
                text: "[ skrætʃ ]"
                font_name: "fonts/ARIAL.TTF"
                font_size: '13sp'
                theme_text_color: "Custom"
                text_color: [152/255, 136/255, 136/255,1]
            
            #MDLabel:
            #    text: ""

            MDLabel:
                text: "Sense"
                font_size: '13sp'
                bold: True
                theme_text_color: "Custom"
                text_color: [75/255, 75/255, 75/255, 1]
                
            MDLabel:
                id: lbl_sense
                text: "rayar, arañar, rascar"
                font_size: '14sp'
                #font_name: 'fonts/Righteous-Regular.ttf'
                font_name: "fonts/ARIAL.TTF"
                theme_text_color: "Custom"
                text_color: [152/255, 136/255, 136/255,1]
                
    MDFloatLayout:
        size_hint: 1,0.15
        pos_hint: {"center_x": 0.5, "center_y": 0.95}
        MDCard:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            radius: [10]
            elevation: 10
            focus_behavior: True
            MDLabel:
                id: lbl_word
                text: 'Scratch'
                #font_style: 'H5'
                font_size: '32sp'
                halign: 'center'
                font_name: "fonts/Oduda-Bold.otf"
                #font_size: '25sp'
                theme_text_color: "Custom"
                text_color: [75/255, 75/255, 75/255, 1]
        MDIconButton:
            id: btn_heart
            pos_hint: {"center_x": 0.5, "center_y": 1}
            #icon: "comp/next.png"
            icon: 'heart-outline'
            user_font_size: "17sp"
            theme_text_color: "Custom"
            text_color: [152/255, 136/255, 136/255,1]
            on_release: root.add_favorites()
    
    MDBoxLayout:
        orientation: 'vertical'
        #md_bg_color: 1,0,0,1
        size_hint: 0.9,0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.34}
        spacing: 5
        MDLabel:
            #pos_hint: {"center_x": 0.5, "center_y": 0.98}
            size_hint: 1,0.05
            text: 'Examples'
            halign: 'center'
            font_name: "fonts/Oduda-Bold.otf"
            font_size: '13sp'
            theme_text_color: "Custom"
            text_color: [75/255, 75/255, 75/255, 1]
        MDCard:
            #pos_hint: {'center_x':0.5, 'center_y':0.6}
            size_hint: 1,0.5
            radius: [10]
            elevation: 10
            orientation: "vertical"
            padding: [20,15,20,20]
                
            MDLabel:
                id: lbl_eg_en
                text: "What is Lorem Ipsum Lorem Ipsum is simply dummy text of the printing and typesetting industry Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                font_name: "fonts/FredokaOne-Regular.ttf"
                font_size: '13.5sp'
                theme_text_color: "Custom"
                text_color: [75/255, 75/255, 75/255, 1]
                halign: 'center'
        
    
    MDIconButton:
        pos_hint: {"center_x": 0.5, "center_y": 0.14}
        icon: "translate"
        user_font_size: "15sp"
        theme_text_color: "Custom"
        text_color: [152/255, 136/255, 136/255,1]
        on_release: root.translate()
    
    MDIconButton:
        pos_hint: {"center_x": 0.05, "center_y": 0.3}
        icon: "comp/previous.png"
        user_font_size: "10sp"
        on_release: root.previous()
    
    MDIconButton:
        pos_hint: {"center_x": 0.95, "center_y": 0.3}
        icon: "comp/next.png"
        user_font_size: "10sp"
        on_release: root.next()

    MDFloatLayout:
        #md_bg_color: 1,0,0,1
        size_hint: 1,0.1
        pos_hint: {"x": 0, "y": 0}
        MDIconButton:
            pos_hint: {"center_x": 0.25, "center_y": 0}
            icon: "comp/new.png"
            user_font_size: "12sp"
            on_release: root.change()
        MDIconButton:
            pos_hint: {"center_x": 0.5, "center_y": 0}
            icon: "comp/sound.png"
            on_release: root.play_sound()
        MDIconButton:
            pos_hint: {"center_x": 0.75, "center_y": 0}
            icon: "comp/favorites.png"
            user_font_size: "12sp"
            on_release: root.change_favorite() 